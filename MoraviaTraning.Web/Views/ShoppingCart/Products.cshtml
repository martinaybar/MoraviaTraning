
@{
    ViewBag.Title = "Products";
}

@section Scripts{

    <script src="~/AngularControllers/ProductsController.js"></script>
}


<h2>Products</h2>



<div ng-app="ProductsApp" class="row">

    <div class="col-md-3">
        <p class="lead">Categories</p>
        <div class="list-group">
            <a href="#" class="list-group-item">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">Category 3</a>
        </div>
    </div>
    <div class="col-md-9">

        <input type="text" placeholder="Search Student" ng-model="searchStudent" />

        <div ng-controller="ProductsController" class="row">


            <div ng-repeat="p in products" class="col-xs-12 col-lg-4 col-md-6">
                <div class="thumbnail">
                    <img src="~/Images/ck_320_px_150px.jpg" alt="Product image"/>
                   <div class="caption">
                        <h4 class="pull-right">50.00</h4>
                        <h4>
                            <a href="#">Product Name</a>
                        </h4>
                        <p>The details</p>
                     </div>
                    <div style="text-align: right; margin:5px;">
                        <a>Add to cart <span class="glyphicon glyphicon-plus"></span></a>
                    </div>

                </div>
            </div>


         
        </div>
    </div>
</div>


